{
  "name": "airdrop-checker-monorepo",
  "version": "2.0.0",
  "description": "Comprehensive cryptocurrency airdrop tracking platform",
  "private": true,
  "author": "Airdrop Checker Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "turbo": "latest",
    "typescript": "^5.3.3"
  }
}
